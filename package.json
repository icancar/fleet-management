{
  "name": "fleet-management",
  "version": "1.0.0",
  "description": "Fleet Management System - React Frontend + Node.js Backend",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:shared && npm run build:server && npm run build:client",
    "build:shared": "cd shared && npm run build",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "cd server && npm start",
    "test": "npm run test:shared && npm run test:server && npm run test:client",
    "test:shared": "cd shared && npm test",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "lint": "npm run lint:shared && npm run lint:server && npm run lint:client",
    "lint:shared": "cd shared && npm run lint",
    "lint:server": "cd server && npm run lint",
    "lint:client": "cd client && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "npm run clean:shared && npm run clean:server && npm run clean:client",
    "clean:shared": "cd shared && npm run clean",
    "clean:server": "cd server && npm run clean",
    "clean:client": "cd client && npm run clean"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
